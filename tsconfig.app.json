{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc/app",
    "types": []
  },
  "angularCompilerOptions": {
    "strictTemplates": true
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": ["src/**/*.d.ts"],
  "exclude": [
    "src/**/*.spec.ts",
    "src/app/app.module.ts",
    "src/app/app.config.server.ts",
    "src/app/app.routes.server.ts"
  ]
}
