// tsconfig.server.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/closet-cleanup/server",
    "module": "commonjs",
    "lib": ["es2020"],           // ← no "dom" here
    "types": ["node", "express"] // ← load both Node & Express defs
  },
  "include": [
    "src/main.server.ts",
    "src/server.ts"
  ],
  "angularCompilerOptions": {
    "entryModule": "./src/app/app.server.module#AppServerModule"
  }
}